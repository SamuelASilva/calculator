{
    "name": "calculadora-project",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "test": "npm run test:unit && npm run test:integration",
        "test:unit": "jest --config=jest.config.cjs --runInBand",
        "test:integration": "jest --config=jest.config.cjs tests/integration --runInBand",
        "test:e2e": "npx http-server ./ -p 3000 -s & npx playwright test tests/e2e --reporter=list",
        "start": "npx http-server ./ -p 3000 -s"
    },
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "http-server": "^14.1.1",
        "jest": "^29.0.0",
        "@testing-library/dom": "^8.0.0",
        "jsdom": "^21.0.0"
    }
}